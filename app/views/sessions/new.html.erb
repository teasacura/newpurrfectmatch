<!-- <body class="login"> -->
<body id="login">
  <div class="container">

 <% if flash[:error] %>
   <% flash.each do |key, value| %>
     <div class="alert alert-danger" role="alert">
       <%= content_tag :div, value, class: "flash #{key}" %>
     </div>
   <% end %>
 <% end %>
</div>
  <div class="container">
    <div class="row">
       <h1 style="text-align: center">Login</h1>
       <div style="width: 30%; margin: 25px auto;">
         <%= form_tag '/login' do %>
             <div class="form-group">
                 <%= label_tag :email %>
                 <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
             </div>
             <div class="form-group">
                 <%= label_tag :password %>
                <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter Password" %>
             </div>
             <div class="form-group">
                <%= submit_tag 'Login', class: "btn btn-lg btn-primary btn-block" %>
             </div>
          <% end %>

       </div>
    </div>
  </div>
</body>
